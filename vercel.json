{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  },
  "ignores": [
    "*.md",
    "*.txt",
    "__pycache__/**",
    "*.pyc",
    ".git/**",
    ".gitignore",
    "interfaz_interactiva.py",
    "*.log",
    ".env",
    "requirements-dev.txt",
    "tests/**",
    "docs/**"
  ]
}