{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  },
  "ignores": [
    "__pycache__/**",
    "*.pyc",
    ".git/**",
    "interfaz_interactiva.py",
    "*.md",
    ".env"
  ]
}