{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "excludeFiles": [
        "__pycache__/**",
        "*.pyc",
        ".git/**",
        "interfaz_interactiva.py",
        "*.md",
        ".env",
        "tests/**",
        "*.test.py"
      ]
    }
  }
}